{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "bundler",
    "noEmit": false,
  },
  "include": [
    "./src/**/*.d.ts",
    "./src/**/*.ts"
  ]
}